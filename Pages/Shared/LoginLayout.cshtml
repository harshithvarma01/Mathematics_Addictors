@{
// Removed Layout = null; because we are creating a full layout for the login page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url('https://cdn.wallpapersafari.com/48/71/DJbO57.jpg'); /* Use your local image path */
            background-size: cover; /* Cover the entire screen */
            background-position: center; /* Center the image */
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Arial, sans-serif;
            margin: 0;
        }
        .login-container {
            background: rgba(255, 255, 255, 0.1); /* Transparent white for glass effect */
            backdrop-filter: blur(10px); /* Blurring effect for glassmorphism */
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
            width: 300px;
            border: 1px solid rgba(255, 255, 255, 0.2); /* Border to enhance glass look */
        }
        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #ffffff;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        }
        .form-control {
            margin-bottom: 15px;
            background: rgba(255, 255, 255, 0.2); /* Slightly transparent input field */
            border: none;
            color: #ffffff;
        }
        .form-control::placeholder {
            color: #d1d1d1; /* Lighter placeholder text */
        }
        button {
            width: 100%;
            background-color: #ffffff; /* Button color */
            color: #2575fc;
            border: none;
            font-weight: bold;
        }
        button:hover {
            background-color: #000000;
        }
    </style>
</head>
<body>
<div class="login-container">
    @RenderBody()
</div>

@RenderSection("Scripts", required: false) <!-- Allow scripts to be injected here -->

<!-- Optional: Include any global scripts you might need -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
